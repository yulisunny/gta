<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_past_notification_margin"
    android:layout_marginLeft="@dimen/card_past_notification_margin"
    android:layout_marginRight="@dimen/card_past_notification_margin"
    android:layout_marginTop="@dimen/card_past_notification_margin"
    card_view:contentPadding="@dimen/card_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_past_notification_title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/text_past_notification_line_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_past_notification_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_past_notification_line_1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_past_notification_title"
            android:layout_toEndOf="@+id/text_past_notification_line_1_name" />

        <TextView
            android:id="@+id/text_past_notification_line_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_past_notification_line_1_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_past_notification_line_2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_past_notification_line_1_name"
            android:layout_toEndOf="@+id/text_past_notification_line_2_name" />

        <TextView
            android:id="@+id/text_past_notification_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_past_notification_line_2_name"
            android:lines="5"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>
